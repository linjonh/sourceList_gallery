<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- d-pad click -->
    <item android:drawable="@drawable/user_indicator_pressed" android:state_focused="true" android:state_pressed="true"/>
    <!-- focused -->
    <item android:drawable="@drawable/user_indicator_focused" android:state_focused="true"/>
    <!-- touch mode pressed -->
    <item android:drawable="@drawable/user_indicator_pressed" android:state_pressed="true"/>
    <!-- keybord mode selected such as ListView item selected -->
    <item android:drawable="@drawable/user_indicator_focused" android:state_selected="true"/>
    <!-- normal -->
    <item android:drawable="@drawable/user_indicator_normal"/>

</selector>